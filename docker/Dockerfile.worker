FROM python:3.12-slim

WORKDIR /app

# Certificats SSL + dos2unix pour fix CRLF Windows
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates dos2unix \
    && rm -rf /var/lib/apt/lists/*

# Dépendances Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Code source (uniquement ce qui est nécessaire pour Celery)
COPY app/config.py ./app/
COPY app/celery_app.py ./app/
COPY app/tasks/ ./app/tasks/

# Entrypoint (convertir CRLF → LF pour Windows)
COPY docker/entrypoint-worker.sh /entrypoint.sh
RUN dos2unix /entrypoint.sh && chmod +x /entrypoint.sh

# Healthcheck Celery
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD celery -A app.celery_app inspect ping -d celery@$HOSTNAME || exit 1

ENTRYPOINT ["/entrypoint.sh"]




